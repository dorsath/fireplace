%script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
:css
#sidebar
  #inner
    %h1 Fireplace
    %h2 A simple chat client?
#chat.clearfix
%form#chat-input(action="/speak" method="post")
  %textarea(name="message")
  %input(type='submit')

:javascript
  var es = new EventSource('/stream');
  es.onmessage = function(e) {
    if (e.data != ''){
      data = jQuery.parseJSON(e.data)
      $('#chat').append("<div class='message'><div class='username'>"+ data.username +"</div><div class='content'>"+ data.message +"</div>") ;
      $("html, body").animate({ scrollTop: $(document).height() }, 0);
    }
  }

  $(document).ready(function() {
    $('#chat-input textarea').keydown(function() {
        if (event.keyCode == 13) {
            $('#chat-input').submit();
            return false;
         }
    });

    $('#chat-input').submit(function() {
      $.ajax({
        type: 'POST',
        url: $(this).attr("action"),
        data: $(this).serialize()
      });
      $('#chat-input textarea').val('');
      return false;
    });
  });